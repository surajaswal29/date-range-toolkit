{
  "name": "date-range-toolkit",
  "version": "1.0.0",
  "description": "A comprehensive toolkit for handling date ranges, providing rich date metadata, calendar utilities, and customizable date range generation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "test": "jest",
    "prepare": "husky install",
    "prepublishOnly": "npm test",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "validate": "npm run lint && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/surajaswal29/date-range-toolkit.git"
  },
  "keywords": [
    "date-range",
    "date-toolkit",
    "calendar-utils",
    "date-metadata",
    "weekly-dates",
    "date-formatting",
    "typescript-dates",
    "date-utilities"
  ],
  "author": "Suraj Aswal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/surajaswal29/date-range-toolkit/issues"
  },
  "homepage": "https://github.com/surajaswal29/date-range-toolkit#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.1",
    "@jest/types": "^29.6.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "unpkg": "dist/index.umd.min.js",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
